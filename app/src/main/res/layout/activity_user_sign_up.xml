<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".ActivityUserSignIn">

    <ProgressBar
        android:id="@+id/progressbarActivityUserSignUp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:backgroundTint="#fff"
        android:indeterminate="true"
        android:indeterminateTint="#16B24D"
        android:max="100"
        android:visibility="gone" />


    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/icons"
            android:text="@string/text_signup_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText

            android:id="@+id/edtUserNameSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/user_name"
            android:gravity="center"
            android:hint="نام کاربری "
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="#080908"
            android:textColorHint="#626362"

            />

        <EditText
            android:id="@+id/edtpassSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/password"
            android:gravity="center"
            android:hint="کلمه عبور "
            android:inputType="numberPassword"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="#080908"
            android:textColorHint="#626362" />

        <EditText
            android:id="@+id/edtRePassSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableRight="@drawable/password"
            android:gravity="center"
            android:hint="تکرار کلمه عبور "
            android:inputType="numberPassword"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="#080908"
            android:textColorHint="#626362" />



        <Button
            android:id="@+id/btnRegister"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_shape"
            android:text="@string/register"
            android:textColor="@color/icons"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>